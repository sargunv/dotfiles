[push]
autoSetupRemote = true

[user]
name={{ .chezmoi.config.data.full_name }}
email={{ .chezmoi.config.data.github_username }}@users.noreply.github.com

[credential "https://github.com"]
helper =
helper = !gh auth git-credential

[credential "https://gist.github.com"]
helper =
helper = !gh auth git-credential

[submodule]
recurse = true

[push]
autoSetupRemote = true

{{ if eq .chezmoi.os "linux" -}}
[core]
excludesfile = /home/sargunv/.gitignore_global
{{ if lookPath "flatpak" }}
editor=flatpak run re.sonny.Commit

[re.sonny.Commit]
title-length-hint=50
body-length-wrap=72
auto-capitalize-title=true
{{ end }}
{{ end }}

{{ if eq .chezmoi.os "darwin" -}}
[core]
excludesfile = /home/sargunv/.gitignore_global
editor = /Applications/Komet.app/Contents/MacOS/Komet
{{ end }}
